{
  "rules": {
    ".read": true,
    ".write": true,
    "questionIndex": {
      ".read": true,
      ".write": true,
      ".validate": "newData.hasChildren(['josh', 'nini'])"
    },
    "inbox": {
      ".read": true,
      ".write": true,
      "$user": {
        ".validate": "$user === 'josh' || $user === 'nini'"
      }
    },
    "answers": {
      ".read": true,
      ".write": true,
      "$user": {
        ".validate": "$user === 'josh' || $user === 'nini'"
      }
    }
  }
}
